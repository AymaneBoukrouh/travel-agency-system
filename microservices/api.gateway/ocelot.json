{
  "Routes": [
    {
      "UpstreamPathTemplate": "/api/hotels",
      "UpstreamHttpMethod": [ "Get", "Post" ],

      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "hotel_microservice",
          "Port": 80
        }
      ],
      "DownstreamPathTemplate": "/api/hotels"
    },
    {
      "UpstreamPathTemplate": "/api/hotels/{hotelId}",
      "UpstreamHttpMethod": [ "Get", "Put", "Delete" ],

      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "hotel_microservice",
          "Port": 80
        }
      ],
      "DownstreamPathTemplate": "/api/hotels/{hotelId}"
    },
    {
      "UpstreamPathTemplate": "/api/users",
      "UpstreamHttpMethod": [ "Get", "Post" ],

      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "user_microservice",
          "Port": 80
        }
      ],
      "DownstreamPathTemplate": "/api/users"
    },
    {
      "UpstreamPathTemplate": "/api/users/{userId}",
      "UpstreamHttpMethod": [ "Get", "Put", "Delete" ],

      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "user_microservice",
          "Port": 80
        }
      ],
      "DownstreamPathTemplate": "/api/users/{userId}"
    }
  ],
  "GlobalConfiguration": {
    "BaseUrl": "http://localhost:5555"
  }
}